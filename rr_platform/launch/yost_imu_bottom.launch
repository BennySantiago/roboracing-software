<launch>
    <!-- Bottom IMU -->
    <node pkg="rr_platform" name="imu_bottom" type="yost_imu" output="screen" >
        <param name="SERIAL_PORT" type="string" value="/dev/yost_imu" />
        <param name="frame_id" type="string" value="base_footprint"/>
        <param name="topic_name" type="string" value="/imu"/>
        <!-- Ï€/2 rad. rotation about the x axis -->
        <rosparam param="imu_orientation_correction">
            [ [ -0.6056999,  0.5626401,  0.5626401],
            [-0.5626401,  0.1971501, -0.8028499],
            [-0.5626401, -0.8028499,  0.1971501] ]
        </rosparam>
    </node>
</launch>
